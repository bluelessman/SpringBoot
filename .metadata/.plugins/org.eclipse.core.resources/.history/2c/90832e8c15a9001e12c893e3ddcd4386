package edu.pnu.Controller;

import org.springframework.web.bind.annotation.RestController;

import edu.pnu.Domain.MemberVO;
import lombok.Data;

import java.util.ArrayList;
import java.util.Date;
import java.util.List;

import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;


@RestController
@Data
public class MemberController {
	List<MemberVO> list;
	public MemberController(){
		System.out.println("===> MemberController 생성");
		list = new ArrayList<MemberVO>();
		for(int i=1;i<=10;i++) {
			MemberVO member = new MemberVO();
			member.setId(i);
			member.setName("테스터"+i);
			member.setPass("1234"+i);
			member.setRegidate(new Date());
			list.add(member);
		}
	}
	
	
	
	@GetMapping("/member")
	public List<MemberVO> getMembers(){
		return list;
	}
	
	@GetMapping("/member/{id}")
	public MemberVO getMethodName(@PathVariable("id") int id) {
		for (MemberVO memberVO : list) {
			if(id==memberVO.getId()) {
				return memberVO;
			}
		}
		return null;
	}
	
	@PostMapping("/member")
	public int addMember(MemberVO member) {
		System.out.println(member);
		for (MemberVO memberVO : list) {
			if(member.getId()==memberVO.getId()) {
				return 0;
			}
		}

		list.add(member);
		return 1;
	}
//	@GetMapping("/member:method=post")
//	public int updateMembers(MemberVO member) {
//		for (MemberVO memberVO : list) {
//			if(member.getId()==memberVO.getId()) {
//				return 0;
//			}
//		}
//	}
}
